{{> header }}

<main>
    <h1>{{title}}</h1>
    {{#if subtitle }}
        <p class="subtitle">{{{subtitle}}}</p>
    {{/if}}

    <section class="content">
        <div>
            {{#if image }}
                <img src="/img/{{image}}" alt="{{image_alt}}">
            {{/if}}
            <p>{{{text_left}}}</p>
        </div>
        {{#if text_right }}
            <div>
                <p>{{{text_right}}}</p>
            </div>
        {{/if}}
    </section>
</main>

