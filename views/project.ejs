<!doctype html>

<html lang="en">
    <head>
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato:300,400">
        <link rel="stylesheet" type="text/css" href="css/default.css">

        <script src="js/smoothscroll.js"></script>

        <meta name="viewport" content="width=device-width" />

        <title><%= title %></title>

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-57392466-1', 'auto');
          ga('send', 'pageview');

        </script>
    </head>

    <body>
        <%- include('partials/header.ejs') %>

        <main>
            <h1><%= title %></h1>
            <% if (hasOwnProperty('subtitle')) { %>
                <p class="subtitle"><%- subtitle %></p>
            <% } %>

            <section class="content">
                <div <% if (hasOwnProperty('html_right')) { %>class="half-width"<% } %>>
                    <% if (hasOwnProperty('images')) { %>
                        <% images.forEach(function(image) { %>
                            <div class="image">
                                <img src="/img/<%= image.file %>" alt="<%= image.alt_text %>">
                                <% if (image.hasOwnProperty('caption')) { %>
                                    <div class="caption"><%= image.caption %></div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } %>
                    <% if (hasOwnProperty('video')) { %>
                        <% if (hasOwnProperty('video_frame') && video_frame) { %>
                            <div class="iphone-4s-frame">
                                <div class="video-responsive">
                                    <video loop autoplay>
                                        <source src="img/<%= video %>" type="video/mp4">
                                        <img src="img/<%= video_fallback %>" alt="<%= video_fallback_alt %>">
                                    </video>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="video-responsive">
                                <video loop autoplay>
                                    <source src="img/<%= video %>" type="video/mp4">
                                    <img src="img/<%= video_fallback %>" alt="<%= video_fallback_alt %>">
                                </video>
                            </div>
                        <% } %>
                    <% } %>
                    <%- hasOwnProperty('html_left') ? html_left : '' %>
                </div>
                <% if (hasOwnProperty('html_right')) { %>
                    <div class="half-width">
                        <%- html_right %>
                    </div>
                <% } %>
            </section>
        </main>

        <%- include('partials/projects-grid.ejs') %>

        <%- include('partials/footer.ejs') %>

    </body>

</html>
